{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.1.0",
  "description": "__MSG_shortDesc__",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/TextExtractionUtils.js", "utils/ContextUtils.js", "utils/ElementUtils.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Data Scraping Tool",
    "default_icon": {
      "16": "icons/data-scraping-tool-16.png",
      "32": "icons/data-scraping-tool-32.png",
      "48": "icons/data-scraping-tool-48.png",
      "128": "icons/data-scraping-tool-128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/data-scraping-tool-16.png",
    "32": "icons/data-scraping-tool-32.png",
    "48": "icons/data-scraping-tool-48.png",
    "128": "icons/data-scraping-tool-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "icons/*.png",
        "icons/*.jpg",
        "icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
