{
  "manifest_version": 3,
  "name": "Dataminer",
  "version": "0.1.3",
  "description": "Simple web scraping tool with visual element selection and data export",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/TextExtractionUtils.js", "utils/OnPageUtils.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Dataminer",
    "default_icon": {
      "16": "icons/dataminer-16.png",
      "32": "icons/dataminer-32.png",
      "48": "icons/dataminer-48.png",
      "128": "icons/dataminer-128.png"
    }
  },
  "icons": {
    "16": "icons/dataminer-16.png",
    "32": "icons/dataminer-32.png",
    "48": "icons/dataminer-48.png",
    "128": "icons/dataminer-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "icons/*.png",
        "icons/*.jpg",
        "icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
